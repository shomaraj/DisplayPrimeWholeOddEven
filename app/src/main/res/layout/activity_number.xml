<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.displayprimewholeoddeven.NumberActivity"
    android:background="#f9f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textdisp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whole number"
        android:id="@+id/buttonwhole"
        android:layout_below="@+id/textdisp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp"
        android:onClick="whole" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prime number"
        android:id="@+id/buttonprime"
        android:layout_alignTop="@+id/buttonwhole"
        android:layout_alignRight="@+id/textdisp"
        android:layout_alignEnd="@+id/textdisp"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:onClick="prime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="odd number"
        android:id="@+id/buttonodd"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="odd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="even number"
        android:id="@+id/buttoneven"
        android:layout_alignBottom="@+id/buttonodd"
        android:layout_alignLeft="@+id/buttonprime"
        android:layout_alignStart="@+id/buttonprime"
        android:onClick="even" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numdisp"
        android:layout_toLeftOf="@+id/decrement"
        android:text="   "
        android:layout_toEndOf="@+id/increment"
        android:layout_toRightOf="@+id/increment"
        android:layout_below="@+id/buttonodd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/increment"
        android:onClick="increment"
        android:layout_below="@+id/buttonodd"
        android:layout_alignRight="@+id/buttonwhole"
        android:layout_alignEnd="@+id/buttonwhole"
        android:layout_marginTop="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  -"
        android:id="@+id/decrement"
        android:onClick="decrement"
        android:layout_alignTop="@+id/increment"
        android:layout_alignRight="@+id/buttoneven"
        android:layout_alignEnd="@+id/buttoneven" />

</RelativeLayout>
